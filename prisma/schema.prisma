generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model solanaKeypair {
  id String @id @default(cuid())
  publicKey String
  privateKey String
  createdAt DateTime @default(now())
  user User @relation(fields: [userId], references: [id])
  userId Int
  @@unique([publicKey, privateKey])
}

model User {
  id Int @id @default(autoincrement())
  userId String @unique
  username String
  publicKey String?
  privateKey String?
  createdAt DateTime @default(now())
  solanaKeypair solanaKeypair[]
  bots Bot[]
}

model Bot {
  id String @id @default(cuid())
  exchange String
  TokenAddress String
  WalletsAmount Int
  capitalAmount Float
  expiryDate DateTime
  expiredAt DateTime?
  createdAt DateTime @default(now())
  userId Int
  user User @relation(fields: [userId], references: [id])
}